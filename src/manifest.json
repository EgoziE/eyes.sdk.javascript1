{
  "description": "Applitools plugin for Selenium IDE",
  "manifest_version": 2,
  "name": "Applitools for Selenium IDE",
  "version": "1.0.0.0",
  "version_name": "1.0.0",
  "homepage_url": "https://applitools.com/",
  "icons": {
    "70": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "52": "icons/icon_menu.png"
    },
    "default_title": "Applitools for Selenium IDE"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "contextMenus",
    "webNavigation",
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "externally_connectable": {
    "ids": ["*"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "match_about_blank": true,
      "all_frames": true
    }
  ],
  "background":
  {
    "scripts": ["assets/eyes-browser.min.js", "assets/background.js"]
  },
  "options_ui": {
    "page": "assets/options.html",
    "browser_style": true,
    "chrome_style": true
  }
}
