{
  "compilerOptions": {
    "outFile": "typings.d.ts",
    "rootDir": "./lib",

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,

    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "removeComments": true,

    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./index.js",
    "./lib/**/*.js"
  ],
  "exclude": [
    "./lib/troubleshoot/*.js"
  ],
}